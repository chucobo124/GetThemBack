<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th>Classid</th>
      <th>Name</th>
      <th>Sex</th>
      <th>Birthday</th>
      <th>Leavingdate</th>
      <th>Officephone</th>
      <th>Homephone</th>
      <th>Grduateschool</th>
      <th>Company</th>
      <th>Jobtitle</th>
      <th>Skill</th>
      <th>Email</th>
      <th>Country</th>
      <th>Area</th>
      <th>Address</th>
      <th>Permission</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.classId %></td>
        <td><%= person.name %></td>
        <td><%= person.sex %></td>
        <td><%= person.birthday %></td>
        <td><%= person.leavingDate %></td>
        <td><%= person.officePhone %></td>
        <td><%= person.homePhone %></td>
        <td><%= person.graduateSchool %></td>
        <td><%= person.company %></td>
        <td><%= person.jobTitle %></td>
        <td><%= person.skill %></td>
        <td><%= person.email %></td>
        <td><%= person.country %></td>
        <td><%= person.area %></td>
        <td><%= person.address %></td>
        <td><%= person.permission %></td>
        <td><%= person.status %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

