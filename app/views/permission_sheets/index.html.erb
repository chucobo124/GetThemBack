<p id="notice"><%= notice %></p>

<h1>Listing Permission Sheets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permission_sheets.each do |permission_sheet| %>
      <tr>
        <td><%= permission_sheet.name %></td>
        <td><%= link_to 'Show', permission_sheet %></td>
        <td><%= link_to 'Edit', edit_permission_sheet_path(permission_sheet) %></td>
        <td><%= link_to 'Destroy', permission_sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

